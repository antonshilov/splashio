<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/fullscreenBackground"
                                             tools:context=".ui.fullscreen.FullscreenImageFragment"
                                             android:id="@+id/frameLayout">

  <com.github.chrisbanes.photoview.PhotoView
    android:id="@+id/photoView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:src="@tools:sample/backgrounds/scenic"
  />

  <ImageView
    android:id="@+id/avatar"
    android:layout_width="48dp"
    android:layout_height="48dp"
    tools:ignore="ContentDescription"
    app:layout_constraintBottom_toBottomOf="@+id/photoView"
    tools:src="@tools:sample/avatars[2]" android:layout_marginStart="16dp"
    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"/>
  <TextView
    android:id="@+id/userName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/fullscreenImageToolbarText"
    tools:text="Vasily Puplin" app:layout_constraintStart_toEndOf="@+id/avatar"
    android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/avatar"
    app:layout_constraintBottom_toBottomOf="@+id/avatar"/>

  <android.support.design.widget.FloatingActionButton
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:fabSize="normal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/buttonWallpaper"
    android:src="@drawable/ic_wallpaper"
    android:layout_marginBottom="16dp" android:layout_marginEnd="16dp"/>
  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    style="@style/TransparentToolbarTheme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:navigationIcon="?attr/homeAsUpIndicator"
    app:layout_constraintTop_toTopOf="parent"
  />
  <android.support.constraint.Group
    android:id="@+id/bottomContainer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:constraint_referenced_ids="buttonWallpaper, avatar, userName"/>


</android.support.constraint.ConstraintLayout>